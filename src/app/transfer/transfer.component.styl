.container
  overflow-y scroll
  height 100%

  mat-card, mat-chip-list
    margin 10px 56px
    height 35px
    display flex
    align-items center
    span
      margin-left 30px

.footer
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background-color: #fff;
  display flex
  justify-content center
  align-items center
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.2), 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12);

  button
    margin 0 15px;
    padding 0 25px
.light
  color #333
  font-style italic
