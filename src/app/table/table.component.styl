.container
  overflow-y scroll
  height 100%

  mat-card, mat-chip-list, mat-form-field
    margin 10px 56px
    height 35px
    display flex
    align-items center

    span
      margin-left 30px
  mat-form-field
    margin-top 35px
    ::ng-deep .mat-form-field-wrapper
      width 100%
.footer
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background-color: #fff;
  display flex
  justify-content center
  align-items center
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.2), 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.12);

  button
    margin 0 15px;
    padding 0 25px

.light
  color #333
  font-style italic
.order
  margin 10px 56px
  display flex
  .category
    width 35%
    position relative
    .button
      display flex
      flex-flow column
      position sticky
      top 80px
      width 100%
    button
      width 90%
      margin 5px
  .item
    width 65%
    display flex
    justify-content space-between
    flex-flow column
    .left
      width 50%
    .right
      width 50%
      display flex
      justify-content flex-end
      button
        margin 0 10px
      .count
        display flex
        justify-content center
        align-items center
        margin 0 15px
        width 40px
        height 40px
        border 1px solid #333
        border-radius 50px
        font-weight 600
      .background
        border unset
        background-color #ffccbc
    mat-card
      margin-left unset
      margin-right  unset
.position-absolute
  position absolute
